<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="blue-panel" stylesheets="@../CSS/newCascadeStyleSheet.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainLogin">
   <children>
      <Label layoutX="150.0" layoutY="8.0" text="Pharmacy Management" textFill="#243bbf">
         <font>
            <Font name="Gabriola" size="41.0" />
         </font>
      </Label>
      <Label layoutX="100.0" layoutY="116.0" styleClass="tf" stylesheets="@../CSS/newCascadeStyleSheet.css" text="Username">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Label layoutX="100.0" layoutY="180.0" styleClass="tf" stylesheets="@../CSS/newCascadeStyleSheet.css" text="Password">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <TextField fx:id="username" layoutX="226.0" layoutY="114.0" onKeyReleased="#loginBtnEnabler" promptText="Username" />
      <PasswordField layoutX="226.0" layoutY="178.0" />
      <RadioButton fx:id="user" layoutX="193.0" layoutY="235.0" mnemonicParsing="false" selected="true" styleClass="tf" stylesheets="@../CSS/newCascadeStyleSheet.css" text="User">
